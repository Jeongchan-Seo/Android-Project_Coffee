<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/btnReturn"
        android:layout_width="58dp"
        android:layout_height="65dp"
        android:layout_marginTop="20dp"
        android:scaleType="fitCenter"
        android:src="@drawable/back" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- 타이틀 -->

            <!-- 수동식 커피머신 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#BDBDBD"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="8dp"
                android:text="커피머신의 구분"
                android:textSize="40sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" 수동, 반자동, 자동 커피머신"
                android:textSize="16sp"

                android:padding="8dp"
                android:gravity="center_horizontal"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#BDBDBD"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="수동식 커피머신"
                android:textSize="24sp"
                android:textStyle="bold"
                android:padding="8dp"
                android:gravity="center_horizontal"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="전통적인 형태로 사람의 손에 의해 모든 동작이 이뤄지는 커피머신"
                android:textSize="10sp"
                android:padding="8dp"
                android:gravity="center_horizontal"
                android:textColor="#FF4081" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/machine1"
                android:adjustViewBounds="true"
                android:layout_gravity="center_horizontal"
                android:padding="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="수동식 커피머신은 사용자가 직접 커피를 만드는 과정의 대부분을 제어할 수 있습니다. 커피 원두를 직접 갈고, 물의 양과 추출 시간을 조절할 수 있어 자신의 취향에 맞는 커피를 만들 수 있습니다."
                android:textSize="16sp"
                android:padding="8dp"/>

            <!-- 반자동식 커피머신 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="반자동식 커피머신"
                android:textSize="24sp"
                android:textStyle="bold"
                android:padding="8dp"
                android:gravity="center_horizontal"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="그라인더와 머신이 분리되어 있는 방식으로 전문 바리스타용 커피머신"
                android:textSize="10sp"
                android:padding="8dp"
                android:gravity="center_horizontal"
                android:textColor="#FF4081" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/machine2"
            android:adjustViewBounds="true"
            android:layout_gravity="center_horizontal"
            android:padding="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="반자동식 커피머신은 수동식과 자동식의 장점을 결합한 것입니다. 사용자가 커피 원두를 갈고, 포터필터를 장착하며, 추출 버튼을 눌러 커피를 추출합니다. 일정 부분 자동화되어 있어 편리함과 제어성을 모두 제공합니다."
                android:textSize="16sp"
                android:padding="8dp"/>

            <!-- 자동식 커피머신 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="자동식 커피머신"
                android:textSize="24sp"
                android:textStyle="bold"
                android:padding="8dp"
                android:gravity="center_horizontal"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="한 번의 작동으로 분쇄와 추출이 동시에 이루어지고 일정한 커피맛을 유지하는 전자동 커피머신"
                android:textSize="10sp"
                android:padding="8dp"
                android:gravity="center_horizontal"
                android:textColor="#FF4081" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/machine3"
            android:adjustViewBounds="true"
            android:layout_gravity="center_horizontal"
            android:padding="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="자동식 커피머신은 사용자가 버튼만 누르면 기계가 자동으로 커피를 추출하는 방식입니다. 원두를 자동으로 갈고, 물의 양과 추출 시간을 자동으로 조절합니다. 매우 편리하며 일관된 품질의 커피를 제공합니다."
                android:textSize="16sp"
                android:padding="8dp"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
