<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/imageViewCoffee"
        android:layout_width="match_parent"
        android:layout_height="108dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:src="@drawable/coffee_title" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/imageViewCoffee"
        android:layout_marginTop="20dp">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageViewMenu"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_margin="5dp"
                android:scaleType="fitCenter"
                android:src="@drawable/coffee_menu"
                android:onClick="onImageClicked" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Coffee Menu"
                android:textAlignment="center"
                android:textSize="16sp"
                android:layout_margin="5dp" />

            <ImageView
                android:id="@+id/imageViewTools"
                android:layout_width="match_parent"
                android:layout_height="249dp"
                android:layout_margin="5dp"
                android:onClick="onImageClicked"
                android:scaleType="fitCenter"
                android:src="@drawable/coffee_tools" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Coffee Tools"
                android:textAlignment="center"
                android:textSize="16sp"
                android:layout_margin="5dp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageViewVariety"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_margin="5dp"
                android:scaleType="fitCenter"
                android:src="@drawable/coffee_variety"
                android:onClick="onImageClicked" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bean Variety"
                android:textAlignment="center"
                android:textSize="16sp"
                android:layout_margin="5dp" />

            <ImageView
                android:id="@+id/imageViewFranchise"
                android:layout_width="match_parent"
                android:layout_height="249dp"
                android:layout_margin="5dp"
                android:onClick="onImageClicked"
                android:scaleType="fitCenter"
                android:src="@drawable/franchise" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Franchise"
                android:textAlignment="center"
                android:textSize="16sp"
                android:layout_margin="5dp" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>